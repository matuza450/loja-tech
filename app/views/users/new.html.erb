<h2 class="mb-4 text-center">Criar Conta</h2>

<%= form_with(model: @user, url: signup_path, local: true) do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <h3><%= pluralize(@user.errors.count, "erro") %> impediram o cadastro:</h3>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row g-3 mb-3">
    <div class="col-md-6">
      <%= f.label :name, "Nome completo", class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="col-md-6">
      <%= f.label :birthdate, "Data de nascimento", class: "form-label" %>
      <%= f.date_field :birthdate, class: "form-control" %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="row g-3 mb-3">
    <div class="col-md-6">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="col-md-6">
      <%= f.label :password_confirmation, "Confirme a senha", class: "form-label" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>

  <div class="d-grid gap-2">
    <%= f.submit "Criar Conta", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>